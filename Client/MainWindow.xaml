<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="DarkGray">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <WrapPanel Grid.Row="0" Grid.Column="0">
            <TextBox x:Name="server_addr" Width="250" Margin="10" Text="https://localhost:5001"/>
            <Button Content="Connect" Click="Connect_to_server" Margin="10" Width="80"/>
        </WrapPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label HorizontalAlignment="Center">Create</Label>
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel>
                    <Label>Players count</Label>
                    <TextBox x:Name="players_count" Width="150" Margin="10,0,10,10"/>
                    <Label>Map size</Label>
                    <TextBox x:Name="map_size" Width="150" Margin="10,0,10,10"/>
                </StackPanel>
                <Button Content="Create" Click="Create_new_room" Margin="20" Width="80" Height="30"/>
            </WrapPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label HorizontalAlignment="Center">Join</Label>
            <WrapPanel>
                <ComboBox Name="rooms_select" Margin="20" Width="150" Height="30"/>
                <Button Click="Join_room" Content="Join" Margin="20" Width="80" Height="30"/>
            </WrapPanel>
        </StackPanel>

        <ListBox Grid.Row="0" Grid.Column="1" x:Name="debug_list" Margin="10" Background="Gray">
            <ListBoxItem Content="Debug window"/>
        </ListBox>

    </Grid>

</Window>
